<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C2048"
             xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" x:Class="C2048.NumberBlock"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Border x:Name="border" BorderThickness="2" BorderBrush="LightGoldenrodYellow" HorizontalAlignment="Left" Width="50" DataContext="this">
        <TextBlock Text="{Binding Number, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Microsoft YaHei UI" />
    </Border>
</UserControl>
