<Window x:Class="C2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C2048"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="380" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <StackPanel>
        <Canvas Name="canvas" Height="500" Width="350" MouseMove="canvas_MouseMove" MouseDown="canvas_MouseDown" Background="#FF555470" />
        <TextBlock Name="status" Text="Current status" />
    </StackPanel>
</Window>
